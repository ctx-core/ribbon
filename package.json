{
	"name": "@ctx-core/ribbon",
	"version": "10.0.12",
	"description": "ctx-core ribbon",
	"keywords": [
		"ctx-core",
		"ribbon"
	],
	"homepage": "https://github.com/ctx-core/ribbon#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/ribbon/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/ribbon/issues"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"require": "./dist/index.cjs",
		"import": "./dist/index.js",
		"package.json": "./package.json"
	},
	"scripts": {
		"build": "npm run clean && npm run copy-mjs && npm run copy-components && npm run compile",
		"clean": "rm -f tsconfig.tsbuildinfo && rm -f src/**/*.js && rm -f src/**/*.d.ts && rm -f src/**/*.map",
		"compile": "./node_modules/.bin/tsc -b .",
		"copy-mjs": "cd dist && echo \"module.exports = (async () => import('./index.js'))()\" > index.cjs",
		"copy-components": "cd src && find . | grep \\.svelte$ | awk '{print \"mkdir -p dirname \"$1\" && cp -f \"$1\" ../dist/\"$1}'",
		"exec": "$@",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"@ctx-core/ctx-core-package-tools": "workspace:^8.0.35",
		"@ctx-core/sass": "workspace:^12.0.10",
		"svelte": "3.38.3",
		"typescript": "^4.3.5"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"dependencies": {
		"esm": "^3.2.25"
	}
}
